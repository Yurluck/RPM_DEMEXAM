<Page x:Class="PaperCompany.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PaperCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Name="AgentsPageBtn" Content="Агенты" 
                    Style="{StaticResource MainButtonStyle}" Margin="5"
                    Click="AgentsPageBtn_Click"/>
            <Button Name="ProductsPageBtn" Content="Товары" 
                    Style="{StaticResource MainButtonStyle}" Margin="5"
                    Click="ProductsPageBtn_Click"/>
        </StackPanel>
        <Image Source="Resources/company_logo.png" Opacity=".1" Panel.ZIndex="-1" Width="300"/>
    </Grid>
</Page>
